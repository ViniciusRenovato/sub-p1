<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="212dp"
        android:layout_height="32dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="75dp"
        android:text="Qual o nome do livro?"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_nome"
        android:layout_width="367dp"
        android:layout_height="35dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="16dp"
        android:hint="Digite o nome "
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="21dp"
        android:text="Qual a editora do livro?"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_nome" />

    <TextView
        android:id="@+id/id_editora"
        android:layout_width="357dp"
        android:layout_height="38dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="19dp"
        android:hint="Digite a editora"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="208dp"
        android:layout_height="34dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="17dp"
        android:text="Qual o autor do livro?"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_editora" />

    <TextView
        android:id="@+id/id_autor"
        android:layout_width="357dp"
        android:layout_height="46dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="16dp"
        android:hint="Digite o autor"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="207dp"
        android:layout_height="37dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="22dp"
        android:text="Qual o ano do livro?"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_autor" />

    <TextView
        android:id="@+id/id_ano"
        android:layout_width="357dp"
        android:layout_height="45dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="20dp"
        android:hint="Digite o ano "
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="216dp"
        android:layout_height="38dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="22dp"
        android:text="Qual o codigo do livro?"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_ano" />

    <TextView
        android:id="@+id/id_codigo"
        android:layout_width="351dp"
        android:layout_height="44dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="21dp"
        android:text="Digite o codigo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <Button
        android:id="@+id/id_salvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="154dp"
        android:layout_marginTop="29dp"
        android:text="Salvar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_codigo" />
</androidx.constraintlayout.widget.ConstraintLayout>